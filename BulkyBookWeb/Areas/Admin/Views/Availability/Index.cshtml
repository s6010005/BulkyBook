
@model IEnumerable<Availability>

@{
    ViewData["Title"] = "Διαθεσιμότητα";
}



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Διαθεσιμότητα</h2>
		</div>
        <div class="col-6 text-end">
            <a asp-controller="Availability" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Προσθήκη τύπου διαθεσιμότητας
			</a>
		</div>
	</div>
    <br /><br />
<table class="table table-striped" >
    <thead>
        <tr>
            <th>
                Διαθεσιμότητα
            </th>
            <th>
                Επεξεργασία
            </th>
            <th>
                Διαγραφή
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="90%">
                    @obj.Name
                </td>
                <td width="5%">

                    <a asp-controller="Availability" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i></a>
                </td>
                <td width="5%">
                    @*<button type="submit" onClick=Delete('/Admin/Availability/Delete/@obj.Id') class="btn btn-danger">Διαγραφή</button>*@
                    <a onClick=Delete('/Admin/Availability/Delete/@obj.Id')
                        class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i></a>
                </td>
            </tr>
        }
    </tbody>


</table>
</div>


@section Scripts{
	@{
    <partial name="_ValidationScriptsPartial" />
	}

<script>

        function Delete(url) {
        Swal.fire({
            title: 'ΔΙΑΓΡΑΦΗ',
            text: 'Είστε σίγουροι οτι θέλετε να διαγράψετε την εγγραφή;',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            cancelButtonText: 'Όχι',
            confirmButtonText: 'Ναί'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: url,
                    type: 'DELETE',
                    success: function (data) {
                        if (data.success) {
                            location.reload();
                        }
                        else {
                            toastr.error(data.message);
                        }
                    }
                })
            }
        })
    }
</script>
}