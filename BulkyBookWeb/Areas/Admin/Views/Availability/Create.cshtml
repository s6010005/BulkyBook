@model Availability

@{
    ViewData["Title"] = "Νεο τύπο διαθεσιμότητας";
}

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Νέο τύπο διαθεσιμότητας</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>

		<button type="submit" class="btn btn-success" >Δημιουργία</button>
		<a asp-controller="Category" asp-action="Index" class="btn btn-danger" >
			Ακύρωση
		</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
